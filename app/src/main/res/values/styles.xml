<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--tab選項style-->
    <style name="myTabStyle" parent="Widget.Design.TabLayout">
        <!--selection bar的高度-->
        <item name="tabIndicatorHeight">5dp</item>
        <item name="android:background">@android:color/holo_orange_dark</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <!--selection的顏色（選取）-->
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>
    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <!--selection的顏色（未選）-->
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">true</item>
    </style>


</resources>